<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <!-- BEGIN MAIN CONTENT -->
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!-- VIDEO BACKGROUND (YOUTUBE THUMBNAIL) -->
        <ImageView
            android:id="@+id/iv_video_view"
            android:layout_width="200dp"
            android:layout_height="155dp"
            tools:src="@drawable/video_example"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"/>

        <!-- PLAY VIDEO ICON -->
        <ImageView
            android:id="@+id/iv_play_icon"
            android:src="@drawable/ic_play_arrow_black_24dp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleX="2"
            android:scaleY="2"
            android:scaleType="center"
            app:layout_constraintTop_toTopOf="@+id/iv_video_view"
            app:layout_constraintLeft_toLeftOf="@+id/iv_video_view"
            app:layout_constraintRight_toRightOf="@+id/iv_video_view"
            app:layout_constraintBottom_toBottomOf="@+id/iv_video_view" />

        <!-- CIRCLE ICON -->
        <ImageView
            android:id="@+id/iv_circle_icon"
            android:src="@drawable/ic_panorama_fish_eye_black_24dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:scaleX="3"
            android:scaleY="3"
            android:scaleType="center"
            app:layout_constraintTop_toTopOf="@+id/iv_video_view"
            app:layout_constraintLeft_toLeftOf="@+id/iv_video_view"
            app:layout_constraintRight_toRightOf="@+id/iv_video_view"
            app:layout_constraintBottom_toBottomOf="@+id/iv_video_view" />

    </android.support.constraint.ConstraintLayout>

</GridLayout>